            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
 		 <apex:pageBlockTable value="{!samepage}" var="a">
         </apex:pageBlockTable> 
 <!--#8--><apex:repeat value="{!newpage}" var="c" id="theRepeat">
